html
    head
        title Welcome to OFIT!
        link(rel="stylesheet", type="text/css", href="/css/navbar.css")
        script(src="/scripts/jquery.js")
        block css
    body
        #navbar
            a.navbarbtn(href="/")
                label.labellink OFIT 
            a.navbarbtn(href="/workouts")  
                label.labellink WORKOUTS
            a.navbarbtn(href="/recipes") 
                label.labellink RECIPES
            #searchbar
                form(action="/search", method="GET")
                    input#search(type = "text", placeholder = "Type a workout or a recipe name...", name="search")
                    button.search
                        img#searchbtn(src="/images/searchbtn.png")
            if (user)
                .newindexbtns
                    a.navbarbtn(href = "/createpost")
                        label.labellink CREATE A POST
                    .userbtns
                        img#profpic(src="/images/profile.png")
                        ul.drop
                            li
                                a(href="/profile") VIEW PROFILE
                            li
                                a(href="/logout") LOGOUT
            else
                .indexbtns
                    a.indexbtn#index1(href="/registerpage") REGISTER
                    a.indexbtn#index2(href="/loginpage") LOG IN
        block body
        script(src="/scripts/navbar.js")
        block scripts
    